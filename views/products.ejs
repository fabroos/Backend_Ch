<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
  <body>
    <div class="w-screen h-screen grid place-content-center bg-slate-700">
      <div class="bg-white px-20 py-10 border shadow grid">
        <h2 class="text-2xl text-center font-bold mb-5 text-gray-900 ">
          Products
        </h2>
        <% if (products.length) { %>
        <table class=" border border-slate-500 w-md ">
          <tr class="text-gray-800">
            <th class="border px-6">title</th>
            <th class="border px-6">Price</th>
            <th class="border px-6">Image</th>
          </tr>
          <% products.forEach(product => { %>
          <tr class="text-gray-800">
            <td class="border px-6"><%= product.title %></td>
            <td class="border px-6">$<%= product.price %></td>
            <td class="border px-6">
              <img src="<%= product.image %>" alt="<%= product.title %>" />
            </td>
          </tr>
          <% }) %>
        </table>
        <% } else { %>
        <p class="text-gray-700 font-light px-4 py-1 bg-gray-100">
          No products found
        </p>
        <% } %>
        <a href="add" class="text-blue-500 hover:text-blue-600 text-center mt-6"
          >Add Products</a
        >
      </div>
    </div>
  </body>
</html>
