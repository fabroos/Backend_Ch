<div class="w-screen h-screen grid place-content-center bg-slate-700">
    <div class="bg-white px-20 py-10 border shadow grid">
        <h2 class="text-2xl text-center font-bold mb-5 text-gray-900 ">Products</h2>
        {{#if products}}
            <table class=" border border-slate-500 w-md " >
                <tr class="text-gray-800">
                    <th class="border px-6">title</th>
                    <th class="border px-6">Price</th>
                    <th class="border px-6">Image</th>
                </tr>
                {{#each products}}
                    <tr class="text-gray-600 even:bg-gray-100">
                        <td class="border py-2 px-6 text-center">{{this.title}}</td>
                        <td class="border py-2 px-6 text-center">${{this.price}}</td>
                        <td class="border py-2 px-6 text-center "><img src="{{this.image}}" class=""  /></td>
                    </tr>
                {{/each}}
            </table>
        {{else}}
            <p class="text-gray-700 font-light px-4 py-1 bg-gray-100">No products found ⚠️</p>
        {{/if}}
        <a href="add" class="text-blue-500 hover:text-blue-600 text-center mt-6">Add Products</a>
    </div>
</div>
