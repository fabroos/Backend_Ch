extends main 
block content
    div(class="w-screen h-screen grid place-content-center bg-slate-700")
      form(class="bg-white shadow-md rounded p-10" action=postUrl method=method)
        h2(class="text-2xl text-center font-semibold mb-5 text-gray-700") Add a new product
        div(class="mb-4")
            label(for="title" class="block text-gray-700 text-sm font-bold mb-2") Product title
            input(type="text" name="title" id="title" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Product title" )
        div(class="mb-4")
            label(class="block text-gray-700 text-sm font-bold mb-2" for="image") Image
            input(class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" name="image" id="image" type="text" placeholder="Product Image...")
        div(class="mb-6")
            label(class="block text-gray-700 text-sm font-bold mb-2" for="price") Price
            input(class="shadow appearance-none border  rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" name="price" id="price" type="number" placeholder="$ price")
        div(class="flex items-center justify-center")
            button(class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit") Submit Product
        div(class="flex justify-center")
            a(href="/products" class="text-blue-500 text-sm hover:text-blue-700 mt-4") See All Products